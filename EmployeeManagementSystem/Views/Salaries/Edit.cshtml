@model EmployeeManagementSystem.Models.Salary

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit Salary</h1>
<hr />
<div class="row mb-3">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group mb-2">
                <label asp-for="EmployeeId" class="control-label mb-1"></label>
                <select asp-for="EmployeeId" class="form-select" asp-items="ViewBag.EmployeeId"></select>
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="DesignationId" class="control-label mb-1"></label>
                <select asp-for="DesignationId" class="form-select" asp-items="ViewBag.DesignationId"></select>
                <span asp-validation-for="DesignationId" class="text-danger"></span>
            </div> 
            <div class="form-group mb-2">
                <label asp-for="SalaryLevel" class="control-label mb-1"></label>
                <select asp-for="SalaryLevel" class="form-select" asp-items="Html.GetEnumSelectList<Salary.Level>()"></select>
                <span asp-validation-for="SalaryLevel" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="TotalSalaryAmount" class="control-label mb-1"></label>
                <input asp-for="TotalSalaryAmount" class="form-control" />
                <span asp-validation-for="TotalSalaryAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary shadow" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="text-decoration-none" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
