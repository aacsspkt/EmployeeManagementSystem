@model EmployeeManagementSystem.Models.LoginViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row shadow mx-auto my-md-5 rounded" style="min-width: 35rem; max-width: 60rem;">
    <div class="col-md-6 p-3">
        <h1 class="fw-normal mt-3 mx-5 text-dark fs-2">Welcome</h1>
        <h1 class="fw-bold text-warning  mx-5 fs-1">Himalaya Organic Farm</h1>
    </div>
    <div class="col-md-6 p-4 border-start">
        <h1 class="text-dark">Login</h1>
        <hr />
        <form asp-action="Login">
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-2 w-75">
                <label asp-for="Email" class="control-label mb-1"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mb-3 w-75">
                <label asp-for="Password" class="control-label mb-1"></label>
                <input type="password" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary shadow" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}