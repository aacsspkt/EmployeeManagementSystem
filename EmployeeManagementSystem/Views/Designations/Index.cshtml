@model IEnumerable<EmployeeManagementSystem.Models.Designation>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-baseline mb-2">
    <h1>Designations</h1>
    <a class="btn btn-success shadow" asp-action="Create">Create New</a>
</div>

<div class="p-2 shadow rounded-2">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DesignationName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Department)

                </th>
                <th>
                    @Html.DisplayNameFor(model => model.InitialSalary)
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DesignationName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Department.DepartmentName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.InitialSalary)
                    </td>
                    <td>
                        <a class="btn btn-sm btn-primary btn-icon shadow" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>
                        <a class="btn btn-sm btn-secondary btn-icon shadow" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-info-square"></i></a>
                        <a class="btn btn-sm btn-danger btn-icon shadow" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
